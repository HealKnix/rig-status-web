{
  "name": "rig-status-web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:mock": "vite --mode mock",
    "build": "tsc && vite build",
    "build:mock": "tsc && vite build --mode mock",
    "preview": "vite preview",
    "type-check": "tsc --build --force",
    "prettier": "prettier --ignore-unknown --write .",
    "stylelint": "stylelint **/*.{css,scss,sass}",
    "stylelint:fix": "stylelint **/*.{css,scss,sass} --fix",
    "eslint": "eslint **/*.{tsx,ts,jsx,js}",
    "eslint:fix": "eslint **/*.{tsx,ts,jsx,js} --fix",
    "lint": "npm run prettier && npm run stylelint:fix && npm run eslint:fix && npm run type-check",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*": "npm run prettier",
    "src/**/*.{tsx,ts,jsx,js}": [
      "npm run eslint:fix",
      "bash -c 'npm run type-check'"
    ],
    "src/**/*.{css,scss,sass}": "npm run stylelint:fix"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.48.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^20.14.2",
    "axios": "^1.7.2",
    "cookies-ts": "^1.0.5",
    "dotenv": "^16.4.5",
    "echarts-for-react": "^3.0.2",
    "husky": "^9.1.5",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.23.1",
    "recharts": "^2.12.7",
    "reconnecting-websocket": "^4.4.0",
    "sass": "^1.77.4",
    "stylelint": "^16.9.0",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  }
}
